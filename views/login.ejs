<form action="/login" method="POST" class="p-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Đăng nhập</h4>

            <!-- Email -->
            <div class="form-group mb-3">
                <label for="email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input type="email" class="form-control" name="email" required placeholder="Nhập email của bạn">
                </div>
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control" name="password" required placeholder="Nhập mật khẩu của bạn">
                </div>
            </div>

            <!-- Display Errors -->
            <% if(flash.error) { %>
                <div class="alert alert-danger">
                    <p><%= flash.error %></p>
                </div>
            <% } %>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100 py-2 mt-3">Đăng nhập</button>

            <!-- Google Login Button -->
            <div class="mt-3">
                <a href="/auth/google" class="btn btn-danger w-100 py-2">
                    <i class="fab fa-google"></i> Đăng nhập bằng Google
                </a>
            </div>

            <!-- Forgot Password Link -->
            <div class="mt-3 text-center">
                <a href="/forgot-password" class="text-muted">Quên mật khẩu?</a>
            </div>
        </div>
    </div>
</form>
