<% if (user && user.role === 'admin') { %> <!-- Only show this content if the user is an admin -->

    <div class="container mt-5">
        <h1 class="text-center">Trang quản lý</h1>
        
        <!-- Section for Recipes -->
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">Quản lý công thức</h2>
                <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
                    <% if (recipes && recipes.length > 0) { %>
                        <% recipes.forEach(function(recipe, index){ %>
                            <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
                                <div class="category__img category__img--large shadow rounded">
                                    <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
                                </div>
                                <div class="pt-1 fw-bold"><%= recipe.name %></div>
                            </a>
                        <% }) %>
                    <% } else { %>
                        <p>No items found.</p>
                    <% } %>
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/admin/dashboard?page=<%= currentPage - 1 %>">Trước</a>
                            </li>
                        <% } %>

                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="/admin/dashboard?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>

                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/admin/dashboard?page=<%= currentPage + 1 %>">Tiếp</a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>

        <!-- Section for Users -->
        <div class="row mt-5">
            <div class="col-12">
                <h2 class="mb-4">Quản lý người dùng</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Họ và tên</th>
                                <th scope="col">Email</th>
                                <th scope="col">Vai trò</th>
                                <th scope="col">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(function(user) { %>
                                <tr>
                                    <!-- Edit Form for Each User -->
                                    <form action="/admin/user/edit-update/<%= user._id %>" method="POST">
                                        <td>
                                            <input type="text" name="name" class="form-control" value="<%= user.name %>" required />
                                        </td>
                                        <td>
                                            <input type="email" name="email" class="form-control" value="<%= user.email %>" required />
                                        </td>
                                        <td>
                                            <select name="role" class="form-select" required>
                                                <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
                                                <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                                            </select>
                                        </td>
                                        <td>
                                            <button type="submit" class="btn btn-success btn-sm me-2">Cập nhật</button>
                                            <!-- Button to delete the user -->
                                            <a href="/admin/user/delete/<%= user._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có muốn xóa người dùng này?')">Xóa</a>
                                        </td>
                                    </form>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

<% } else { %>
    <div class="alert alert-danger">
        You do not have permission to access this page.
    </div>
<% } %>
