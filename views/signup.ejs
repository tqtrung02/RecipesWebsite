<form action="/signup" method="POST" class="p-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Tạo tài khoản</h4>

            <!-- Full Name -->
            <div class="form-group mb-3">
                <label for="name" class="form-label">Họ và tên</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input type="text" class="form-control" name="name" required placeholder="Điền họ và tên">
                </div>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label for="email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input type="email" class="form-control" name="email" required placeholder="Điền email">
                </div>
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control" name="password" required placeholder="Tạo mật khẩu">
                </div>
            </div>

            <!-- Display Errors -->
            <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                <div class="alert alert-danger">
                    <% errors.forEach(function(error) { %>
                        <p><%= error.msg %></p>
                    <% }) %>
                </div>
            <% } %>

            <% if (locals.flash.error) { %>
                <div class="alert alert-danger">
                    <%= locals.flash.error %>
                </div>
            <% } %>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100 py-2 mt-3">Đăng ký</button>

            <!-- Login Redirect -->
            <div class="mt-3 text-center">
                <p>Đã có tài khoản? <a href="/login">Đăng nhập ở đây</a></p>
            </div>
        </div>
    </div>
</form>
